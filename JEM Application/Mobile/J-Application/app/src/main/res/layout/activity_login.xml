<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:orientation="vertical"
    android:background="@color/colorGrayWhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    tools:context="com.example.jmora.webservicesoap.ui.activities.LoginActivity">

    <include layout="@layout/header_login_layout"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">



        <LinearLayout
            android:id="@+id/layProgress"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:visibility="gone"
            android:gravity="center"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/prgLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    <EditText
        android:id="@+id/etDni"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Ingrese su DNI"/>
        <TextView
            android:id="@+id/tvUserValidation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="validation"
            android:visibility="gone"
            android:layout_marginTop="-10dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/colorRed"/>

    <EditText
        android:id="@+id/etPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_marginTop="10dp"
        android:hint="Ingrese su ContraseÃ±a"/>
        <TextView
            android:id="@+id/tvPassValidation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="validation"
            android:visibility="gone"
            android:layout_marginTop="-10dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/colorRed"/>

        <TextView
            android:id="@+id/tvValidation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="validation"
            android:visibility="gone"
            android:textColor="@color/colorRed"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom">

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingresar"/>

        <Button
            android:id="@+id/btnSign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrarse"/>


    </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical"
        android:background="@color/colorOrangeLight">

        <TextView
            android:id="@+id/tvVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="version"
            android:layout_gravity="center"
            android:textSize="12dp"
            android:textColor="@color/colorWhite"/>

    </LinearLayout>

</LinearLayout>
